# Production environment variables for Docker Compose
# Copy this file to .env in the backend directory

# Application Environment
ENVIRONMENT=production
PORT=8000
LOG_LEVEL=INFO
ENABLE_DOCS=false

# Security (REQUIRED: Change these!)
SECRET_KEY=your-super-secure-secret-key-here-generate-with-openssl-rand-hex-32
ALLOWED_ORIGINS=["https://your-frontend-domain.com","https://www.your-frontend-domain.com"]

# Database Configuration
POSTGRES_DB=exam_transcripts_prod
POSTGRES_USER=exam_api_user
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://exam_api_user:your-secure-database-password-here@db:5432/exam_transcripts_prod

# Redis Configuration (optional)
REDIS_PORT=6379

